<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="opti_lol_api.static" class="Optii\LolApiBundle\Api\StaticApi">
            <argument>%opti_lol_api.key%</argument>
            <argument>%opti_lol_api.endpoints%</argument>
            <argument>%opti_lol_api.region%</argument>
            <argument>%opti_lol_api.cache%</argument>
            <argument>%kernel.cache_dir%</argument>
            <argument>%opti_lol_api.throttle%</argument>
        </service>
        <service id="opti_lol_api.regional" class="Optii\LolApiBundle\Api\RegionalApi">
            <argument>%opti_lol_api.key%</argument>
            <argument>%opti_lol_api.endpoints%</argument>
            <argument>%opti_lol_api.region%</argument>
            <argument>%opti_lol_api.cache%</argument>
            <argument>%kernel.cache_dir%</argument>
            <argument>%opti_lol_api.throttle%</argument>
        </service>
    </services>
</container>


